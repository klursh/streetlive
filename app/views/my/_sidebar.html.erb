    <li><%= link_to "マイページ", my_scout_path %></li>
    <li><%= link_to "スカウトプロフィール", scout_path(scout) %></li>
    <li><%= link_to "トップ動画 - 再生数", movies_rankings_view_path %></li>
    <li><%= link_to "トップアーティスト - アクセス数", artists_rankings_view_path %></li> 
