<%- scout  = current_user.scout %>
<%- artist = current_user.artist %>
<div class="well sidebar-nav" id="my-sidebar">
  <ul class="nav nav-list">
    <% if artist %>
    <li><%= link_to "マイページ", my_artist_path %></li>
    <li><%= link_to "アーティストプロフィール", artist_path(artist) %></li>
    <li><%= link_to "動画管理", my_movies_path %></li>
    <li><%= link_to "プロフィール編集", edit_artist_path(artist) %></li>
