<%= simple_form_for artist, html: { class: "form-horizontal" } do |f| %>
<%= f.input :name %>
<%= f.input :email %>
<%= f.input :location %>
<%= f.input :introduction %>
<%= f.submit nil, class: "btn btn-primary" %>
<%= link_to t(".cancel", default: t("helpers.links.cancel")),
          my_artist_path, class: "btn btn-default" %>
<% end %>
