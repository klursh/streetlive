<%= simple_form_for(user, html: { class: "form-horizontal" }) do |f| %>
<%= f.input :name %>
<%= f.input :email %>
<%= f.input :introduction %>
<%= f.submit nil, class: "btn btn-primary" %>
<%= link_to t(".cancel", default: t("helpers.links.cancel")),
            my_info_path, class: "btn btn-default" %>
<% end %>
